{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "jsx": "preserve",
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./app/*"],
      "@repo/ui/*": ["../../packages/ui/src/*"],
      "@repo/ui": ["../../packages/ui/src"],
      "@repo/db": ["../../packages/db/src"],
      "@repo/db/*": ["../../packages/db/src/*"],
      "@repo/auth": ["../../packages/auth/src"],
      "@repo/auth/*": ["../../packages/auth/src/*"],
      "@repo/config/*": ["../../packages/config/*"]
    }
  }
}
